{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.vue",
      "**/*.json",
      "**/*.jsonc",
      "**/*.css",
      "**/*.scss",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/build",
      "!!**/coverage",
      "!!**/*.min.js",
      "!!**/*.min.css",
      "!!**/pnpm-lock.yaml",
      "!!**/package-lock.json",
      "!!**/yarn.lock",
      "!!auto-imports.d.ts",
      "!!components.d.ts",
      "!!**/*.md"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "arrowParentheses": "always",
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "includes": ["*.config.{js,mjs,ts}", "*.config.*.{js,mjs,ts}", "**/*.vue"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
